@model InternetMagazine.Models.Customer

@{
    ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>
<h4>Создание нового пользователя</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FIO" class="control-label required"></label><span class="required">*</span>
                <input asp-for="FIO" class="form-control" required="required"/>
                <span asp-validation-for="FIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label required"></label><span class="required">*</span>
                <input asp-for="Gender" type="radio" name="Gender" value="М" />Мужской
                <input asp-for="Gender" type="radio" name="Gender" value="Ж" />Женский
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label required"></label><span class="required">*</span>
                <input asp-for="DateOfBirth" class="form-control" required="required" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label required"></label><span class="required">*</span>
                <input asp-for="Email" class="form-control" required="required"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label required"></label><span class="required">*</span>
                <input asp-for="Phone" class="form-control" required="required"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label required"></label><span class="required">*</span>
                <input asp-for="Login" class="form-control" required="required"/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label required"></label><span class="required">*</span>
                <input asp-for="Password" class="form-control" type="password" required="required"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label><span class="required">*</span>
                <input asp-for="ConfirmPassword" class="form-control" type="password" required="required"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Регистрация" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
