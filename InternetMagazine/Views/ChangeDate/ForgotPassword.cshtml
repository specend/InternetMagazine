@model InternetMagazine.Models.ValidateViewModel
@{
    ViewData["Title"] = "Восстановление пароля";
}

<h1>Введите ваш e-mail</h1>
<form asp-action="ForgotPassword" asp-controller="ChangeDate" method="post" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="All"/>
    <div>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-outline-dark" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
