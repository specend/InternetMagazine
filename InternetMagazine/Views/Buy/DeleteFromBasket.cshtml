@model InternetMagazine.Models.Basket
@{
    ViewData["Title"] = "DeleteFromBasket";
}

<h1>Удаление товара из корзины</h1>
<label class="control-label">Вы действительно хотите удалить товар @Model.Product.Name в количестве @Model.Count?</label>
<div class="row">
    <form asp-controller="Buy" asp-action="DeleteFromBasket" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Да" />
        </div>
    </form>
    <form asp-controller="Buy" asp-action="GoInBasket" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Нет" />
        </div>
    </form>
</div>

